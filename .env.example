# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development

# =============================================================================
# NETWORK & HOSTS
# =============================================================================
# Internal hostnames (for container-to-container communication)
POSTGRES_HOST=postgres-db
MQTT_HOST=mqtt-broker
FRONTEND_HOST=frontend
GAME_SERVICE_HOST=game-service
AUTH_SERVICE_HOST=auth-service
STATS_SERVICE_HOST=stats-service

# External hostname (for browser access)
EXTERNAL_HOST=localhost

# =============================================================================
# SERVICE PORTS
# =============================================================================
FRONTEND_PORT=3000
GAME_SERVICE_PORT=8001
AUTH_SERVICE_PORT=8002
STATS_SERVICE_PORT=8003
ADMINER_PORT=8080
POSTGRES_PORT=5432
MQTT_PORT=1883
MQTT_WEBSOCKET_PORT=9001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE_CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=memory_game_db
POSTGRES_INITDB_ARGS=--auth-host=scram-sha-256

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for Authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_CHANGE_THIS_IN_PRODUCTION

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Log directory for log service
LOG_DIRECTORY=/app/logs

# Development options for React hot reloading
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
FAST_REFRESH=true

# =============================================================================
# ADMINER CONFIGURATION
# =============================================================================
ADMINER_DESIGN=pepa-linha
ADMINER_PLUGINS=tables-filter tinymce
